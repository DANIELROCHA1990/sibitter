<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png">
      </p>
    </figure>
    <div class="media-content">
      <%= render 'sibitts/form' %>
    </div>
  </article>

  <% @sibitts.each do |sibitt| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong>Daniel Rocha</strong><br/>
            <small>@macdaniells</small><br/>
            <p><%=sibitt.sibitt%></p>
          </div>
          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to sibitt, class: "level-item" do %>
                <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
              <% end %>

              <%= link_to edit_sibitt_path(sibitt), class: "level-item" do %>
                <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
              <% end %>

              <%= link_to sibitt, method: :delete, data: {confirm: 'Are you sure you want to delete this sibitt?'} do %>
                <span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
              <% end %>
            </div>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
</div>