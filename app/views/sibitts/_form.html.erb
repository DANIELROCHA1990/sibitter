<%= simple_form_for(@sibitt) do |f| %>
<%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :sibitt, label: "Sibitt about it", input_html: {class: "textarea"}, wrapper: false, 
      label_html: {class: "label"}, placeholder: "Compose a new sibitt..." %>
    </div>
  </div>
<%= f.button :submit, class: "button is-info" %>
<% end %>